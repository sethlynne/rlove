<div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-4-l'>
  <a href='{{ url }}' class='c-tag-card'>
    {{#if feature_image}}
      <img class='c-tag-card__image lazyload' data-src='{{ img_url feature_image size='m' }}' alt='{{ name }}'>
    {{/if}}
    <h2 class='c-tag-card__title'>{{ name }} <span class='u-font-size-tiny'>({{ count.posts }})</span></h2>
  </a>
</div>