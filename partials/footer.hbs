<footer class='c-footer'>
  <div class='o-grid'>

    <div class='o-grid__col o-grid__col--2-4-s o-grid__col--1-4-m'>
      <p class='c-footer__headline'>{{t 'Navigation' }}</p>

      <ul class='c-footer-list o-plain-list'>
        {{ navigation }}
      </ul>
    </div>

    <div class='o-grid__col o-grid__col--2-4-s o-grid__col--1-4-m'>
      <p class='c-footer__headline'>
        <a href="/blog">Blog</a>
      </p>

      {{#get 'tags' limit='all'}}
        <ul class='c-footer-list o-plain-list'>
          {{#foreach tags}}
            <li><a href='{{ url }}'>{{ name }}</a></li>
          {{/foreach}}
        </ul>
      {{/get}}
    </div>

    <div class='o-grid__col o-grid__col--2-4-s o-grid__col--1-4-m'>
      <p class='c-footer__headline'>More</p>

      <ul class='c-footer-list o-plain-list'>
        <li class='c-nav__item'>
          <a href="https://www.rythmia.com" class="c-nav__link {{#if current}} c-nav__link--current {{/if}}">Rythmia</a>
        </li>
        <li class='c-nav__item'>
          <a href="/guidelines" class="c-nav__link {{#if current}} c-nav__link--current {{/if}}">Guidelines</a>
        </li>
        <li class='c-nav__item'>
          <a href="/help" class="c-nav__link {{#if current}} c-nav__link--current {{/if}}">Help</a>
        </li>
        <li class='c-nav__item'>
          <a href="/terms" class="c-nav__link {{#if current}} c-nav__link--current {{/if}}">Terms</a>
        </li>
        <li class='c-nav__item'>
          <a href="/privacy" class="c-nav__link {{#if current}} c-nav__link--current {{/if}}">Privacy</a>
        </li>
        <li class='c-nav__item'>
          <a href="/contest-rules" class="c-nav__link {{#if current}} c-nav__link--current {{/if}}">Contest Rules</a>
        </li>
      </ul>
    </div>

    <div class='o-grid__col o-grid__col--3-3-s o-grid__col--1-4-m text-center'>
      <a href="/" class="footer-logo">
        <img src="{{asset 'images/rlove-logo-black-byline.png' }}" />
      </a>
      {{> email-form }}
    </div>

    {{#if @labs.members}}
      {{#unless @member}}
      <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l'>
        <p class='c-footer__headline'>{{t 'Newsletter' }}</p>
        {{> subscribe-form inputLabel='subscribe-email-footer'}}
      </div>
      {{/unless}}
    {{/if}}

    <div class='o-grid__col o-grid__col--full'>
      <div class='c-footer__bottom'>
        <div class='o-grid'>

          <div class='o-grid__col o-grid__col--3-3-s  o-grid__col--1-3-m col-1 center'>
            {{> social-icons }}
          </div>

          <div class='o-grid__col o-grid__col--3-3-s  o-grid__col--1-3-m text-center col-2'>
            <div class='u-font-size-tiny c-footer__copyright'>
              &copy; {{ date format='YYYY' }} Rythmia Love Inc. Big #2 Nelson Spring Business Complex Cades Bay, Nevis. RLOVE is an application owned by Rythmia Love Inc., a St. Kitts Nevis Company.
            </div>
          </div>

          <div class='o-grid__col o-grid__col--3-3-s  o-grid__col--1-3-m col-3'>
            <a href="https://www.rythmia.com" class="footer-logo text-right">
              <img src="{{asset 'images/from-rythmia.png' }}" />
            </a>
          </div>



        </div>
      </div>
    </div>

  </div>
</footer>
